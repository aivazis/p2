// metamethods
pyre::journal::Error::
Error(const name_type & name, verbosity_type verbosity) :
    channel_type(name, verbosity)
{
    // get my entry
    entry_type & e = entry();
    // decorate with my severity
    e.note("severity", "error");
}


// implementation details
// record the message to the chosen device
void
pyre::journal::Error::
record()
{
    // hunt down the device to use
    auto dev = device();
    // record the entry
    dev->alert(entry());
    // all done
    return;
}


void
pyre::journal::Error::
die()
{
    // prepare a message
    auto msg = name() + ": application error";
    // throw an application error
    throw exception_type(msg);
}


// initialize the channel index
auto
pyre::journal::Error::
initializeIndex() -> index_type
{
    // make an empty index; for {error}, channels are (active,fatal) by default
    index_type index(true, true);
    // and return it
    return index;
}


