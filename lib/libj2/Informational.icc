// metamethods
pyre::journal::Informational::
Informational(name_type name) :
    diagnostic_type(),
    channel_type(name)
{
    // decorate with my severity
    setattr("severity", "info");
    // and my channel name
    setattr("channel", name);
}


// interface
void
pyre::journal::Informational::
commit()
{
    // if i'm not an active channel
    if (!state()) {
        // do nothing
        return;
    }

    // otherwise, hunt down the device to use
    auto dev = device();
    // record the entry
    dev->alert(verbosity(), page(), metadata());

    // all done
    return;
}


