// code guard
#if !defined(pyre_journal_Inventory_icc)
#error This header contains implementation details of pyre::journal::Inventory
#else


// metamethods
template <bool stateV>
pyre::journal::Inventory<stateV>::
Inventory(state_t state, device_t * device) :
    _state(state),
    _device(device)
{}


// interface
// accessors
template <bool stateV>
auto
pyre::journal::Inventory<stateV>::
state() const -> state_t
{
    // easy enough
    return _state;
}


template <bool stateV>
auto
pyre::journal::Inventory<stateV>::
device() const -> device_t *
{
    // easy enough
    return _device;
}


// mutators
template <bool stateV>
void
pyre::journal::Inventory<stateV>::
activate()
{
    // turn it on
    _state = true;
    // all done
    return;
}


template <bool stateV>
void
pyre::journal::Inventory<stateV>::
deactivate()
{
    // turn it off
    _state = false;
    // all done
    return;
}


template <bool stateV>
auto
pyre::journal::Inventory<stateV>::
device(device_t * device) -> device_t *
{
    // save the old one
    device_t * old = _device;
    // attach the new one
    _device = device;
    // return the old one
    return old;
}


// syntactic sugar
template <bool stateV>
pyre::journal::Inventory<stateV>::
operator bool() const
{
    // always off
    return state();
}


#endif

