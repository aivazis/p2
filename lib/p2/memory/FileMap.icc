// metamethods
// destructor
pyre::memory::FileMap::
~FileMap()
{
    // remove the mapping
    unmap();
}


// constructor that maps an existing data product
pyre::memory::FileMap::
FileMap(uri_type uri, writable_type writable) :
    _uri { uri },
    _info {},
    _bytes {},
    _data { nullptr },
    _writable { writable }
{
    // make a channel
    pyre::journal::debug_t channel("pyre.memory.map");
    // sign on
    channel
        << "mapping existing data product:" << pyre::journal::newline
        << "  name: " << _uri << pyre::journal::newline
        << "  size: " << _bytes << " bytes"
        << pyre::journal::endl(__HERE__);

    // check the file
    stat();
    // and map it
    map();

    // all done
    return;
}


// constructor that creates a new one
pyre::memory::FileMap::
FileMap(uri_type uri, size_type bytes) :
    _uri { uri },
    _info {},
    _bytes { bytes },
    _data { nullptr },
    _writable { true }
{
    // make a channel
    journal::debug_t channel("pyre.memory.map");
    // sign on
    channel
        << "creating a new data product:" << pyre::journal::newline
        << "  name: " << _uri << pyre::journal::newline
        << "  size: " << _bytes << " bytes"
        << pyre::journal::endl(__HERE__);

    // make the actual file; careful: existing products are deleted
    create();
    // check the file
    stat();
    // and map it
    map();

    // all done
    return;
}


// interface
// get the number of bytes of the memory block
auto
pyre::memory::FileMap::
bytes() const
{
    // easy enough
    return _bytes;
}


// check whether the block is writable
auto
pyre::memory::FileMap::
writable() const
{
    // easy enough
    return _writable;
}


// get the address of the block
auto
pyre::memory::FileMap::
data() const
{
    // easy enough
    return _data;
}


// syntactic sugar
pyre::memory::FileMap::
operator pointer() const
{
    // return the address of the memory block
    return data();
}


